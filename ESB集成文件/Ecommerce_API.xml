<?xml version="1.0" encoding="UTF-8"?>
<api xmlns="http://ws.apache.org/ns/synapse"
     name="Ecommmerce"
     context="/ecommerce">
   <resource methods="GET" uri-template="/api/orders*">
      <inSequence>
         <log>
            <property name="Message Flow" value="Ecommerce Info API - IN"/>
            <property name="Id" expression="$ctx:query.param.id"/>
           
         </log>
         <filter xpath="$ctx:query.param.id">
            <then>
               <send>
                  <endpoint>
                     <http method="GET"
                           uri-template="http://localhost:8080/soa_home2/rest/ECommerce/orderBycustomer/{query.param.id}"/>
                  </endpoint>
               </send>
            </then>
            <else>
               <send>
                  <endpoint>
                     <http method="GET"
                           uri-template="http://localhost:8080/soa_home2/rest/ECommerce/allorder"/>
                  </endpoint>
               </send>
            </else>
         </filter>
      </inSequence>
      <outSequence>
         <send/>
      </outSequence>
   </resource>

   <resource methods="GET" uri-template="/api/products*">
      <inSequence>
         <log>
            <property name="Message Flow" value="Products API - IN"/>
         </log>
         <send>
            <endpoint>
               <http method="GET"
                     uri-template="http://localhost:8080/soa_home2/rest/ECommerce/allproducts"/>
            </endpoint>
         </send>
      </inSequence>
      <outSequence>
         <send/>
      </outSequence>
   </resource>

<resource methods="GET" uri-template="/api/proccess/{pro}">
      <inSequence>
         <log>
            <property name="Message Flow" value="Products API - IN"/>
         </log>
         <send>
            <endpoint>
               <http method="GET"
                     uri-template="http://localhost:8080/soa_home2/rest/LogisiticService/findorderByprocess/{uri.var.pro}"/>
            </endpoint>
         </send>
      </inSequence>
      <outSequence>
         <send/>
      </outSequence>
   </resource>

<resource methods="GET" uri-template="/api/LogisiticService/{orderid}">
      <inSequence>
         <log>
            <property name="Message Flow" value="Products API - IN"/>
         </log>
         <send>
            <endpoint>
               <http method="GET"
                     uri-template="http://localhost:8080/soa_home2/rest/LogisiticService/{uri.var.orderid}"/>
            </endpoint>
         </send>
      </inSequence>
      <outSequence>
         <send/>
      </outSequence>
   </resource>

<resource methods="GET" uri-template="/api/Manufactures/{orderid}">
      <inSequence>
         <log>
            <property name="Message Flow" value="Products API - IN"/>
         </log>
         <send>
            <endpoint>
               <http method="GET"
                     uri-template="http://localhost:8080/soa_home2/rest/Manufactures/{uri.var.orderid}"/>
            </endpoint>
         </send>
      </inSequence>
      <outSequence>
         <send/>
      </outSequence>
   </resource>


   <resource methods="POST" uri-template="/api/addorder">
      <inSequence>
        
         <send>
            <endpoint>
               <http method="POST"
                     uri-template="http://localhost:8080/soa_home2/rest/ECommerce/addorder"/>
            </endpoint>
         </send>
      </inSequence>
      <outSequence>
         <send/>
      </outSequence>
   </resource>
</api>
